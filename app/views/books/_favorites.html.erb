<% if book_favorites.favorited_by?(current_user) %>
  <%= link_to book_favorites.favorites.count, book_favorites_path(book_favorites), method: :delete, class: "fas fa-heart heart_red" %>
<% else %>
  <%= link_to book_favorites.favorites.count, book_favorites_path(book_favorites), method: :post, class: "fas fa-heart heart_blue" %>
<% end %>